<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManualScanFragment">

    <EditText
        android:id="@+id/barcode_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/manual_scan_frag_button"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@id/manual_scan_frag_button"
        android:layout_toStartOf="@id/manual_scan_frag_button"
        android:hint="@string/barcode"
        android:inputType="number" />

    <Button
        android:id="@+id/manual_scan_frag_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:enabled="false"
        android:text="@string/manual_scan" />
</RelativeLayout>
