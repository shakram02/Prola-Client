<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scan_manager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="shakram02.ahmed.prola.ScanManagerFragment">

    <fragment
        android:id="@+id/manual_scan_fragment"
        class="shakram02.ahmed.prola.ManualScanFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        tools:layout="@layout/fragment_manual_entry" />

    <fragment
        android:id="@+id/camera_scan_fragment"
        class="shakram02.ahmed.prola.CameraScanFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        tools:layout="@layout/fragment_camera_scan" />

    <fragment
        android:id="@+id/error_codes_fragment"
        class="shakram02.ahmed.prola.FailedCodesFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:visibility="gone" />
</LinearLayout>
